import random
import time

# Dice Roll Mechanic
def roll_dice():
    return random.randint(1, 6)

roll_count = 0

while roll_count < 1:
    roll_count += 1
    roll = roll_dice()
    print("You rolled a", roll)
    if roll == 5:
        print("You won!")
        break

if roll_count == 1 and roll != 5:
    print("You lost. Better luck next time!")